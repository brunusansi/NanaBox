<Page
  x:Class="NanaBox.AntiDetectionSettingsPage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="using:NanaBox"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  IsTextScaleFactorEnabled="False"
  mc:Ignorable="d">
  <Grid Padding="24">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <TextBlock
      x:Uid="/AntiDetectionSettingsPage/GridTitleTextBlock"
      Grid.Row="0"
      Margin="0,0,0,24"
      FontSize="20"
      FontWeight="SemiBold"
      Text="[Anti-Detection Settings]" />

    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
      <StackPanel Spacing="16">
        <!-- Profile Selection -->
        <StackPanel>
          <TextBlock
            x:Uid="/AntiDetectionSettingsPage/ProfileLabel"
            Margin="0,0,0,8"
            FontWeight="SemiBold"
            Text="[Anti-Detection Profile]" />
          <ComboBox
            x:Name="ProfileComboBox"
            x:Uid="/AntiDetectionSettingsPage/ProfileComboBox"
            HorizontalAlignment="Stretch"
            SelectionChanged="ProfileComboBoxSelectionChanged">
            <ComboBoxItem Content="Vanilla (No Anti-Detection)" />
            <ComboBoxItem Content="Default Gaming" />
            <ComboBoxItem Content="Valorant (Riot Vanguard)" />
            <ComboBoxItem Content="EAC Generic (Easy Anti-Cheat)" />
            <ComboBoxItem Content="BattlEye" />
            <ComboBoxItem Content="FaceIT" />
            <ComboBoxItem Content="Expert Tencent (Tencent ACE)" />
            <ComboBoxItem Content="EA Javelin" />
            <ComboBoxItem Content="Balanced" />
            <ComboBoxItem Content="Bare Metal (Maximum)" />
          </ComboBox>
          <TextBlock
            x:Uid="/AntiDetectionSettingsPage/ProfileDescription"
            Margin="0,8,0,0"
            FontSize="12"
            Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
            Text="[Select the anti-detection profile appropriate for your use case]"
            TextWrapping="Wrap" />
        </StackPanel>

        <!-- Restart Warning -->
        <InfoBar
          x:Uid="/AntiDetectionSettingsPage/RestartWarning"
          IsClosable="False"
          IsOpen="True"
          Message="[VM restart required for changes to take full effect]"
          Severity="Warning" />

        <!-- Read-only Summary Section -->
        <StackPanel Spacing="12">
          <TextBlock
            x:Uid="/AntiDetectionSettingsPage/SummaryHeader"
            FontSize="16"
            FontWeight="SemiBold"
            Text="[Current Anti-Detection Configuration]" />

          <!-- SMBIOS Template -->
          <StackPanel>
            <TextBlock
              x:Uid="/AntiDetectionSettingsPage/SmbiosTemplateLabel"
              FontSize="12"
              FontWeight="SemiBold"
              Text="[SMBIOS Template:]" />
            <TextBlock
              x:Name="SmbiosTemplateTextBlock"
              Margin="0,4,0,0"
              FontSize="12"
              Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
              Text="(Not configured)" />
          </StackPanel>

          <!-- CPUID Template -->
          <StackPanel>
            <TextBlock
              x:Uid="/AntiDetectionSettingsPage/CpuIdTemplateLabel"
              FontSize="12"
              FontWeight="SemiBold"
              Text="[CPUID Template:]" />
            <TextBlock
              x:Name="CpuIdTemplateTextBlock"
              Margin="0,4,0,0"
              FontSize="12"
              Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
              Text="(Not configured)" />
          </StackPanel>

          <!-- MSR Intercept -->
          <StackPanel>
            <TextBlock
              x:Uid="/AntiDetectionSettingsPage/MsrInterceptTemplateLabel"
              FontSize="12"
              FontWeight="SemiBold"
              Text="[MSR Interception:]" />
            <TextBlock
              x:Name="MsrInterceptTemplateTextBlock"
              Margin="0,4,0,0"
              FontSize="12"
              Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
              Text="(Not configured)" />
          </StackPanel>

          <!-- Timing Mode -->
          <StackPanel>
            <TextBlock
              x:Uid="/AntiDetectionSettingsPage/TimingModeLabel"
              FontSize="12"
              FontWeight="SemiBold"
              Text="[Timing Mode:]" />
            <TextBlock
              x:Name="TimingModeTextBlock"
              Margin="0,4,0,0"
              FontSize="12"
              Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
              Text="(Not configured)" />
          </StackPanel>

          <!-- PCI Layout -->
          <StackPanel>
            <TextBlock
              x:Uid="/AntiDetectionSettingsPage/PciLayoutTemplateLabel"
              FontSize="12"
              FontWeight="SemiBold"
              Text="[PCI Layout:]" />
            <TextBlock
              x:Name="PciLayoutTemplateTextBlock"
              Margin="0,4,0,0"
              FontSize="12"
              Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
              Text="(Not configured)" />
          </StackPanel>
        </StackPanel>
      </StackPanel>
    </ScrollViewer>

    <!-- Buttons -->
    <StackPanel
      Grid.Row="2"
      Margin="0,24,0,0"
      HorizontalAlignment="Right"
      Orientation="Horizontal"
      Spacing="8">
      <Button
        x:Uid="/AntiDetectionSettingsPage/SaveButton"
        MinWidth="100"
        Click="SaveButtonClick"
        Content="[Save]"
        Style="{StaticResource AccentButtonStyle}" />
      <Button
        x:Uid="/AntiDetectionSettingsPage/CancelButton"
        MinWidth="100"
        Click="CancelButtonClick"
        Content="[Cancel]" />
    </StackPanel>
  </Grid>
</Page>
